<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
  <data>
    <variable
        name="resultItem"
        type="com.linecy.dilidili.data.model.ResultItem"
        />
    <variable
        name="eventHandling"
        type="com.linecy.dilidili.ui.misc.EventHandling"
        />
  </data>

  <android.support.constraint.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/round_corner_bg_white"
      android:onClick="@{(v)->eventHandling.onJumpSerialsClick(v,resultItem.link)}"
      android:paddingLeft="@dimen/padding_normal"
      android:paddingRight="@dimen/padding_normal"
      android:paddingTop="@dimen/padding_normal"
      tools:ignore="ContentDescription"
      >

    <ImageView
        android:id="@+id/ivCover"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        loadSearchPicture="@{resultItem.coverUrl}"
        tools:srcCompat="@drawable/ic_launcher_background"
        />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_normal"
        android:maxLines="1"
        android:text="@{resultItem.title}"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/font_smaller"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivCover"
        app:layout_constraintTop_toTopOf="@+id/ivCover"
        tools:text="小明"
        />
    <TextView
        android:id="@+id/tvLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:paddingBottom="@dimen/margin_extra_small"
        android:paddingTop="@dimen/padding_smaller"
        android:text="@{resultItem.detail}"
        android:textColor="@color/textSecondary"
        android:textSize="@dimen/font_smallest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        tools:text="小明"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:layout_marginTop="@dimen/margin_normal"
        android:background="@color/divider"
        app:layout_constraintEnd_toEndOf="@+id/tvLabel"
        app:layout_constraintStart_toStartOf="@+id/ivCover"
        app:layout_constraintTop_toBottomOf="@+id/ivCover"
        />
  </android.support.constraint.ConstraintLayout>
</layout>